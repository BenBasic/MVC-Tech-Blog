<section class="row">
  <div class = "column">
    <h2>Create New Post</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-text">Text</label>
        <textarea id="post-text" name="post-text"></textarea>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
  <div class = "column">
    <h2>About Me</h2>
    {{> user-info}}
  </div>

</section>

<!--If there are posts (at least 1)-->
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    <!--Iterates over each post in the posts.length (post array)-->
    {{#each posts as |post|}}
    <li>
        <!--Populates list with each post the user has made using post-info partial-->
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<!--Script to add a post-->
<script src="/javascript/add-post.js"></script>